{
  "name": "sistema-hq-fo-40-backend",
  "version": "2.0.0",
  "description": "Sistema de Inspecciones Vehiculares con DetecciÃ³n de Fatiga del Conductor",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'Backend build completed'",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "lint": "eslint src/ server.js --ext .js",
    "lint:fix": "eslint src/ server.js --ext .js --fix",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate dev",
    "db:reset": "npx prisma migrate reset",
    "db:seed": "node scripts/seed.js",
    "db:studio": "npx prisma studio",
    "postinstall": "npx prisma generate",
    "vercel-build": "npx prisma generate && npx prisma db push",
    "logs": "vercel logs --follow",
    "deploy": "vercel --prod"
  },
  "keywords": [
    "vehicle-inspection",
    "excel-processing",
    "fatigue-detection",
    "prisma",
    "express",
    "vercel"
  ],
  "author": "Sistema HQ-FO-40 Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "multer": "^1.4.5-lts.1",
    "puppeteer": "^24.22.3",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1",
    "supertest": "^6.3.3"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "server.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "nodemonConfig": {
    "watch": [
      "src/",
      "server.js",
      ".env"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "tests/",
      "uploads/",
      "*.log"
    ],
    "delay": 1000
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/sistema-hq-fo-40-backend.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/sistema-hq-fo-40-backend/issues"
  },
  "homepage": "https://github.com/your-org/sistema-hq-fo-40-backend#readme"
}
