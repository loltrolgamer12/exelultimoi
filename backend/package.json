{
  "name": "sistema-hq-fo-40-backend",
  "version": "2.0.0",
  "description": "Sistema de gestiÃ³n de inspecciones vehiculares HQ-FO-40 - Backend API",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "nodemon server.js",
    "start": "node server.js",
    "test": "node test-backend.js",
    "test:watch": "nodemon test-backend.js",
    "db:migrate": "npx prisma migrate deploy",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "db:reset": "npx prisma migrate reset",
    "db:debug": "node debug-database.js",
    "db:backup": "node src/scripts/backup.js",
    "logs:clear": "rm -rf logs/*.log",
    "build": "echo 'No build step required for Node.js'",
    "lint": "eslint src/ --fix",
    "format": "prettier --write src/",
    "health": "curl -f http://localhost:3001/health || exit 1",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "docker:build": "docker build -t hqfo40-backend .",
    "docker:run": "docker run -p 3001:3001 hqfo40-backend"
  },
  "keywords": [
    "inspecciones-vehiculares",
    "hq-fo-40",
    "excel-processing",
    "vehicle-inspection",
    "nodejs",
    "express",
    "prisma",
    "postgresql"
  ],
  "author": {
    "name": "Tu Nombre",
    "email": "tu-email@empresa.com"
  },
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1",
    "supertest": "^6.3.3"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "nodemonConfig": {
    "watch": [
      "src/**/*",
      "server.js",
      ".env"
    ],
    "ext": "js,json",
    "ignore": [
      "node_modules/",
      "logs/",
      "uploads/",
      "*.test.js"
    ],
    "delay": 2000
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2022": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-console": "off",
      "prefer-const": "warn",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/sistema-hqfo40-backend.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/sistema-hqfo40-backend/issues"
  },
  "homepage": "https://github.com/tu-usuario/sistema-hqfo40-backend#readme"
}